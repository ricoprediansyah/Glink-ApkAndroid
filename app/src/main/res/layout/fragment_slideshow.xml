<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment"
    android:background="@drawable/background">

    <LinearLayout
        android:onClick="masuk1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/logo"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/glink2"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="sans-serif-medium"
            android:text="Seperti yang kita ketahui bahwa indonesia merupakan negara agraris dengan sebagian besar penduduk bekerja disektor pertanian, untuk mempermudah kegitan pertanian maka aplikasi ini menjadi salah satu solusi terbaik. G Link (Garden Link), seperti namanya diharapkan dengan aplikasi ini para petani dapat terhubung langsung dengan kebunnya walaupun jarak memisahkan mereka."
            android:textColor="#F2F2F2"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>